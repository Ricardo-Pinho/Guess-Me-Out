<h1>Listing avatarcomponents</h1>

<table>
  <tr>
    <th>Avatar</th>
    <th>Componenttype</th>
    <th>Component</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @avatarcomponents.each do |avatarcomponent| %>
  <tr>
    <td><%= Avatar.find(avatarcomponent.avatar).name %></td>
    <td><%= Component.find(avatarcomponent.component).name %></td>
    <td><%= Componenttype.find(avatarcomponent.componenttype).name %></td>
    <td><%= link_to 'Show', avatarcomponent %></td>
    <td><%= link_to 'Edit', edit_avatarcomponent_path(avatarcomponent) %></td>
    <td><%= link_to 'Destroy', avatarcomponent, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

