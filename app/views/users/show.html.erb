<div id="content" xmlns="http://www.w3.org/1999/html">

  <% if @user.errors.any? %>
      <ul class="Signup_Errors">
        <% for message_error in @user.errors.full_messages %>
            <li>* <%= message_error %></li>
        <% end %>
      </ul>
  <% end %>

  <%= form_for(:user, :url => "edit") do |f| %>
      <h2 class='User_Header'><%=@user.username%>'s profile </h2>
      <%if @user_avatar %>
          <div class="svgwindow">
            <%= link_to  :controller => 'avatars', :action => 'show', :id => @user_avatar.id do %>
            <svg version="1.1" baseProfile="basic"
                 data-avatar=<%=@user_avatar.id%> xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:cc="http://creativecommons.org/ns#" xmlns:svg="http://www.w3.org/2000/svg" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
            xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="128px" height="128px"
            viewBox="0 0 512 512" xml:space="preserve">
            </svg>
            <%end%>
            <p></p>
          </div>
          <br/>
          <br/>
          <br/>
          <br/>
          <br/>
          <br/>
          <br/>

          <%= hidden_field_tag('skin_ctype_id', "") %>
          <%= hidden_field_tag('skin_comp_id',"") %>

          <%= hidden_field_tag('hair_ctype_id',"") %>
          <%= hidden_field_tag('hair_comp_id',"") %>

          <%= hidden_field_tag('hair_type_ctype_id',"") %>
          <%= hidden_field_tag('hair_type_comp_id',"") %>

          <%= hidden_field_tag('eye_color_ctype_id',"") %>
          <%= hidden_field_tag('eye_color_comp_id',"") %>

          <%= hidden_field_tag('moustache_ctype_id',"") %>
          <%= hidden_field_tag('moustache_comp_id',"") %>

          <%= hidden_field_tag('nose_ctype_id',"") %>
          <%= hidden_field_tag('nose_comp_id',"") %>

          <%= hidden_field_tag('mouth_ctype_id',"") %>
          <%= hidden_field_tag('mouth_comp_id',"") %>

          <%= hidden_field_tag('shirttype_ctype_id',"") %>
          <%= hidden_field_tag('shirttype_comp_id',"") %>

          <%= hidden_field_tag('shirtcolor_ctype_id',"") %>
          <%= hidden_field_tag('shirtcolor_comp_id',"") %>
      <%end%>
      <p>
        <b>Last Login:</b>
        <%= @user.last_login %>
      </p>

      <p>
        <b>Credits:</b>
        <%= @user.credits %>.00 coins

        <%if session[:user_admin]==1 %>
            <span class="credits_edit">Edit</span>
            <div class="edit_credits">
              <p>
                <%= f.text_field :credits,:class=>'coin_case' %>.00
              </p>
            </div>
        <%end%>

      </p>

      <p>
        <b>Email:</b>
        <%= @user.email %>
        <%if session[:user_admin]==1 || session[:user_name]==@user.username %>
            <span class="email_edit">Edit</span>
          <div class="edit_email">
            <p>
              <%= f.text_field :email %>
            </p>
          </div>
        <%end%>

      </p>

      <p>
        <b>Name:</b>
        <%= @user.name %>
        <%if session[:user_admin]==1 || session[:user_name]==@user.username %>
            <span class="name_edit">Edit</span>
          <div class="edit_name">
            <p>
              <%= f.text_field :name %>
            </p>
          </div>
        <%end%>
      </p>

      <p>
        <b>Birthdate:</b>
        <%= @user.birthdate %>
        <%if session[:user_admin]==1 || session[:user_name]==@user.username %>
            <span class="birthdate_edit">Edit</span>
          <div class="edit_birthdate">
            <p>
              <%= f.date_select(:birthdate, :order => [:day, :month, :year], :default => {:year => Time.now.year-18, :month =>1, :day => 1 }, :start_year => 1900, :end_year => Time.now.year) %>
            </p>
          </div>
        <%end%>

      </p>

      <p>
        <b>Sex:</b>
        <%= @user.sex %>
        <%if session[:user_admin]==1 || session[:user_name]==@user.username %>
            <span class="sex_edit">Edit</span>
          <div class="edit_sex">
            <p><%= f.radio_button(:sex, "Male") %>Male</p>
            <p><%= f.radio_button(:sex, "Female") %>Female</p>
            <p><%= f.radio_button(:sex, "Other") %>Other</p>
          </div>
        <%end%>

      </p>

      <p>
        <b>Location:</b>
        <%= @user.location %>
        <%if session[:user_admin]==1 || session[:user_name]==@user.username %>
            <span class="location_edit">Edit</span>
          <div class="edit_location">
            <p>
              <%= f.text_field :location %>
            </p>
          </div>
        <%end%>

      </p>

      <p>
        <b>Status:</b>
        <%if @user.admin==1 %>
            Admin
        <%else%>
            User
        <%end%>
        <%if session[:user_admin]==1%>
            <span class="admin_edit">Edit</span>
            <div class="edit_admin">
              <p><%= f.radio_button(:admin, 1) %>Admin</p>
              <p><%= f.radio_button(:admin, 0) %>User</p>
            </div>
        <%end%>

      </p>

      <%if session[:user_admin]==1 || session[:user_name]==@user.username %>
          <p>
            <span class="password_edit">Edit Password</span>
          <div class="edit_password">
            <p>Password</p>
            <p>
              <%= f.password_field :password %>
            </p>
            <p>Confirm Password</p>
            <p>
              <%= f.password_field :password_confirmation %>
            </p>
          </div>
          </p>
          <%= f.hidden_field(:username, :value => @user.username) %>
      <%end%>

      <div class="edit_form">
        <%= f.submit "Edit Selected Fields" %>
      </div>
      <% end %>

     <%if session[:user_admin]==1 %>

        <p><%= link_to 'Destroy', @user, confirm: 'Are you sure?', method: :delete %> </p>
       <p> <%= link_to 'Create/Edit Avatar', :controller => :avatars, :action => :new, :userid=>@user.id %> </p>
      <%end%>



  </div>
</div>