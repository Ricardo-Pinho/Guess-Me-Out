<h1>Listing usercomponents</h1>

<table>
  <tr>
    <th>User</th>
    <th>Component</th>
    <th>Componenttype</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @usercomponents.each do |usercomponent| %>
  <tr>
    <td><%= usercomponent.user %></td>
    <td><%= usercomponent.component %></td>
    <td><%= usercomponent.componenttype %></td>
    <td><%= link_to 'Show', usercomponent %></td>
    <td><%= link_to 'Edit', edit_usercomponent_path(usercomponent) %></td>
    <td><%= link_to 'Destroy', usercomponent, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

