<h1>Listing componenttypes</h1>

<table>
  <tr>
    <th>Color</th>
    <th>Name</th>
    <th>Price</th>
    <th>Svg</th>
    <th>Component</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @componenttypes.each do |componenttype| %>
  <tr>
    <td><%= componenttype.color %></td>
    <td><%= componenttype.name %></td>
    <td><%= componenttype.price %></td>
    <td><%= raw(componenttype.svg) %></td>
    <td><%= Component.find(componenttype.component).name %></td>
    <td><%= link_to 'Show', componenttype %></td>
    <td><%= link_to 'Edit', edit_componenttype_path(componenttype) %></td>
    <td><%= link_to 'Destroy', componenttype, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Componenttype', new_componenttype_path %>
